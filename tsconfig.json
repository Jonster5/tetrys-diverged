{
    "include": ["src/**/*", "webpack.config.ts"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2017",
        "module": "es2020",
        "importsNotUsedAsValues": "remove",
        "isolatedModules": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@lib/*": ["src/lib/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"]
        },
        "types": [
            "svelte",
            "svelte/store",
            "svelte/motion",
            "svelte/transition",
            "svelte/animate",
            "svelte/easing"
        ]
    }
}
